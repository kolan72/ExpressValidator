{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "..",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
           "**/*.yml", "**/*.md"
        ],
        "exclude": [
          "_site/**"
        ],
        "src": "../docfx"
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "ExpressValidator",
      "_appTitle": "ExpressValidator",
      "_appLogoPath": "images/Logo.png",
      "_enableSearch": true,
      "pdf": false
    }
  }
}